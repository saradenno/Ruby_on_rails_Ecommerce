<div class="w-full flex flex-col items-center md:pt-8">
    <div class="h-[40vh] w-full mb-8 flex flex-col items-center justify-center gap-4 bg-repeat-round" style="background-image: url('<%= asset_path('giphy (1).gif') %>')">
        <h2 class="font-miroles font-semibold text-5xl text-indigo-50 mb-4 text-center"> Thank you for purchasing! </h2>
        <p class="text-xl font-semibold text-black-300"> All of your products will be shipped shortly </p> 
        </div>
    <h1 class="font-miroles text-5xl text-black-100 mb-4 text-center"> <%= @purchased_cart.products.map(&:name).join(", ") %> </h1>
    <div class="mx-auto w-full flex flec-col gap-2 ">

        <% @purchased_cart.products.each.with_index do |product, index| %>
            <div class="flex gap-2 bg-gray-100 p-2 rounded-lg">
                <span class="p-2 rounded-full bg-gray-500 text-gray-100"> <%= index + 1 %> </span>
                <p clas=""> <%= product.name %> </p>
                <p class="text-green-500"> <%= number_to_currency(product.price) %> </p>
            </div>

        <% end %>
    </div>
</div>