<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Products" %>

  <h1 class=" text-6xl text-center font-mirole ">Brandy ville</h1>


  <div id="products" class="min-w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @products.each do |product| %>
      <%= render product %>
    
    <% end %>
  </div>

  <%= link_to "Shop by category", categories_path, class: "rounded-lg h-64 w-full bg-gray-200 text-2xl font-bold p-2" %>
</div>

