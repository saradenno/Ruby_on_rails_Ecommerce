
<%= link_to category do %>
  <div id="<%= dom_id category %>" class="relative flex items-center justify-center">
    <%= image_tag category.image , class:"w-full h-85 object-cover rounded-lg shadow-lg hover:brightness-75 transition-all duration-250" if category.image.attached? %>
    <p class ="text-lg text-gray-50 absolute text-2xl font-bold"> <%=category.name %> </p>
  </div>
<% end %>
