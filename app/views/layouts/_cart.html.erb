<div class="relative" id="cart">    
    <%= image_tag('shopping-cart.png', class: "h-10 object-cover") %>
    <% if cart && cart.cart_items.any? %>
        <div class="absolute top-0 right-0 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center">
        <%= cart.cart_items.sum(:quantity) %>
        </div>
    <% end %>
</div>