<div class ="h-16 w-full fixed top-0 bg-gray-900 z-50 "> 
    <div class="flex justify-between items-center h-full w-full px-10 ">
        <%= link_to  root_path, class: "text-white font-bold font-miroles text-3xl flex items-end gap-2" do %>
            <%= image_tag "home.png", class: "h-10 object-cover" %>
            <span> Brandy Ville </span>
        <%end %>

            

        <%= form_with(url: products_path, method: :get, class: "flex items-center") do |form| %>
            <%= form.text_field :query, placeholder: "Search products...", class: "p-2 rounded-lg" %>
            <%= form.submit "Search", class: "ml-2 p-2 bg-blue-500 text-white rounded-lg cursor-pointer hover:bg-blue-700" %>
          <% end %>
        

        <div class="flex items-center gap-4 text-white">
            <% if current_user %>
                <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "hover:text-gray-300" %>
            <% else %>
                <%= link_to "Log in", new_user_session_path, class: " font-semibold bg-gray-500 rounded-lg hover:text-gray-300" %>
                <%= link_to "Sign up", new_user_registration_path, class: "font-semibold bg-gray-500 rounded-lg hover:text-gray-300" %>

            <% end %>

            <%= link_to cart_path do %>
                <%= render "layouts/cart" , cart: @current_cart %>
            <% end %>
        </div>
    </div>

</div>